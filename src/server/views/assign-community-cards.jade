form(data-ng-submit='ok()')
	.modal-header
		h3.modal-title {{street | streets:true:true}}
	.modal-body
		.padding5.bg-danger.rounded3(data-ng-if='error')
			span.red.glyphicon.glyphicon-ban-circle
			span.space5(data-ng-bind='error.message')
		
		h4(data-ng-if="street === 'flop'") First card
		.card1-area
			cardpicker(data-ng-model='card1')
		hr(data-ng-if="street === 'flop'")
		
		h4.top20(data-ng-if="street === 'flop'") Second card
		.card2-area(data-ng-show="street === 'flop'")
			cardpicker(data-ng-model='card2')
		
		h4.top20(data-ng-if="street === 'flop'") Third card
		.card2-area(data-ng-show="street === 'flop'")
			cardpicker(data-ng-model='card3')
	.modal-footer
		button.btn.btn-danger(type='button', data-ng-click='cancel()') Cancel
		button.btn.btn-primary(type='submit') Save {{street | streets:true:false}}
