.player-panel
	// Player name
	span.player-name(data-ng-bind='player.name')
	// Delete player button
	button.btn.btn-xs.btn-danger.player-delete-button.pull-right(data-ng-if='player && !isGameStarted()', data-ng-click='deletePlayer()') X
	// Role buttons
	span.pull-right.button-badge.dealer-button(data-ng-if='isDealer')
	span.pull-right.button-badge.small-blind-button(data-ng-if='isSmallBlind')
	span.pull-right.button-badge.big-blind-button(data-ng-if='isBigBlind')

	// Stack
	span.player-chip-stack(data-ng-bind='player.stack | stackSize')

	// Action info
	.current-action(data-ng-if='player && isGameStarted()', data-ng-bind='mostRecentAction | playerAction')

	// Action buttons and controls
	.action-controls(data-ng-if='player && isGameStarted()')
		button.form-control.btn.btn-sm.btn-info.check-fold-button(
			data-ng-click='checkFold()',
			data-ng-bind='isCheckingAnOption() | checkOrFoldLabel',
			data-ng-disabled='disabled'
		)
		button.form-control.btn.btn-sm.btn-warning.call-button(
			data-ng-click='call()',
			data-ng-disabled='disabled'
		) CALL
		form(data-ng-submit='betRaise()')
			input.form-control.raise-amount-txt(
				type='text',
				data-ng-model='betRaise.amount',
				data-ng-disabled='disabled'
			)
			button.form-control.btn.btn-sm.btn-danger.raise-button(
				type='submit',
				data-ng-bind='isBettingAnOption() | betOrRaiseLabel',
				data-ng-disabled='disabled'
			)
